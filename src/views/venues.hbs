

<h1>Pick your favourite venue</h1>

<div class="swipe-container">
  <div class="swipe-container display">
    {{#each venues}}
      <img src="{{image_url}}" />
    {{/each}}
  </div>

  <div class="description-swipe-container">
    {{#each venues}}
      <div>{{rating}}/5</div>
    {{/each}}
  </div>
</div>
<button class="tap-for-more">Tap here for more</button>

<div class="description-container">
  {{#each venues}}
  <div class="description-wrap">
    <div>{{name}}</div>
    <div>{{address}}</div>
    <div>{{price}}</div>
  </div>
  {{/each}}
</div>

<div class=step-wrap>
  <span class="step"></span>
  <span class="step"></span>
  <span class="step"></span>
  <span class="step"></span>
  <span class="step"></span>
  <span class="step"></span>
  <span class="step"></span>
</div>


