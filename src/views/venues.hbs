<header class="header-wrap">

  {{>header}}

</header>

<h1 class="venue-pick-title">Pick your favourite venue</h1>

<div class="swipe-container">
  {{#each venues}}
  <div class="venue-box">
    <div class="venue-image-container">
      <img src="{{image_url}}" />
    </div>
    <div class="venue-info venue-title">{{name}}</div>
    <div class="venue-rating-stars">{{{starFinder rating}}}</div>
    <div class="venue-info">{{address}}</div>
    <div class="venue-info">{{postcode}}</div>
    <div class="venue-info">{{price}}</div>
    <form class="venue-form-wrap" action="/venuesubmit" method="POST">
      <input class="input-form-hidden" type="text" name="venuename" value="{{name}}" />
      <input class="input-form-hidden" type="text" name="venueaddress" value="{{address}}" />
      <input class="input-form-hidden" type="text" name="venuepostcode" value="{{postcode}}" />
    </form>
  </div>
  {{/each}}
</div>
<div class="step-wrap">
  {{#each venues}}
  <span class="step"></span>
  {{/each}}
</div>
<button class="standard-button venue-submit-button"> Choose this venue</button>
